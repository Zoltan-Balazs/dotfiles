data = {}

weather_url = f"https://wttr.in/CsÃ¶mÃ¶r?format=j1"
weather = requests.get(weather_url).json()

def format_time(time):
    return time.replace("00", "").zfill(2)

def format_chances(hour):
    chances = {
        "chanceoffog": "ðŸŒ«",
        "chanceoffrost": "â„ï¸",
        "chanceofovercast": "ðŸŒ¦",
        "chanceofrain": "ðŸŒ§",
        "chanceofsnow": "ðŸŒ¨",
        "chanceofsunshine": "â˜€ï¸",
        "chanceofthunder": "â›ˆ",
        "chanceofwindy": "ðŸ’¨"
    }

    conditions = []
    for event in chances.keys():
        if int(hour[event]) > 0:
            conditions.append(f"{chances[event]}  {hour[event]}%")
    return ", ".join(conditions)

current_weather = weather['current_condition'][0]
current_weather_desc = current_weather['weatherDesc'][0]['value']
temperature = current_weather['FeelsLikeC']
if temperature == "-0":
    temperature = "0"

data['text'] = f"{WEATHER_CODES[current_weather['weatherCode']]} {temperature}Â°C ({current_weather_desc})"

