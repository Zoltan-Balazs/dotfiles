        data['tooltip'] += f"{format_time(hour['time'])}:00 {WEATHER_CODES[hour['weatherCode']]} {f'{feelsLike:0>2}Â°C'} <b>{hour['weatherDesc'][0]['value']}</b> {format_chances(hour)}\n"

print(json.dumps(data))